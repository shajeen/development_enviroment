Vagrant.configure("2") do |config|
  # Use Ubuntu 22.04 (Jammy Jellyfish) box
  config.vm.box = "generic/ubuntu2204"

  # Specify the VMware provider
  config.vm.provider "vmware_desktop" do |v|
    v.gui = true  # Enable GUI support
    v.vmx["usb.present"] = "TRUE"  # Enable USB support
    v.vmx["usb.generic.autoconnect"] = "TRUE"  # Auto connect USB devices
    v.vmx["mks.enable3d"] = "TRUE"  # Enable 3D acceleration for GUI
  end

  # Forwarding X11 display for GUI applications (using VcXsrv on Windows)
  config.vm.provision "shell", inline: <<-SHELL
    sudo apt-get update
    sudo apt-get install -y ubuntu-desktop x11-apps
  SHELL

  # Network configuration
  config.vm.network "private_network", ip: "192.168.50.1"

  # Change SSH port forwarding
  config.vm.network "forwarded_port", guest: 22, host: 4000, host_ip: "192.168.50.1", id: "ssh", auto_correct: true

  # Sync folders
  config.vm.synced_folder "workspace", "/workspace", disabled: false
end
